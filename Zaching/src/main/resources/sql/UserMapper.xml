<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="UserMapper">
	
	<resultMap type="user" id="userSelectMap">
		<result property="userId" 		  column="user_id" 	 		jdbcType="NUMBER"/>
		<result property="email"  		  column="email"   	 		jdbcType="VARCHAR2"/>
		<result property="name"   		  column="name"    	 		jdbcType="VARCHAR2"/>
		<result property="address"		  column="address" 	 		jdbcType="VARCHAR2"/>
		<result property="longitude" 	  column="longitude" 		jdbcType="VARCHAR2"/>
		<result property="latitude" 	  column="latitude"  		jdbcType="VARCHAR2"/>
		<result property="gender" 		  column="gender" 	 		jdbcType="CHAR"/>
		<result property="phone" 		  column="phone" 	 		jdbcType="VARCHAR2"/>
		<result property="birth" 		  column="birth" 	 		jdbcType="DATE"/>
		<result property="profileIamge"   column="profile_image" 	jdbcType="VARCHAR2"/>
		<result property="role" 		  column="role" 	 		jdbcType="CHAR"/>
		<result property="realName" 	  column="real_name" 		jdbcType="VARCHAR2"/>
		<result property="bankCode" 	  column="bank_code" 		jdbcType="NUMBER"/>
		<result property="accountNumber"  column="account_number" 	jdbcType="VARCHAR2"/>
		<result property="accountCi" 	  column="account_ci" 		jdbcType="NUMBER"/>
		<result property="accountSeqNo"   column="account_seq_no" 	jdbcType="NUMBER"/>
		<result property="totalPoint" 	  column="total_point" 		jdbcType="NUMBER"/>
		<result property="totalMileage"   column="total_mileage" 	jdbcType="NUMBER"/>
		<result property="totalRecommend" column="total_recommend" 	jdbcType="NUMBER"/>
		<result property="latestDate" 	  column="latest_date" 		jdbcType="DATE"/>
		<result property="createdDate" 	  column="created_date" 	jdbcType="DATE"/>
		<result property="setRentCharge"  column="setting_rent_charge" jdbcType="CHAR"/>
		<result property="setNews" 		  column="setting_news" 	   jdbcType="CHAR"/>
		<result property="setNewsFeed" 	  column="setting_newsfeed"    jdbcType="CHAR"/>
		<result property="setBroadcast"   column="setting_broadcast"   jdbcType="CHAR"/>
		<result property="setFriend" 	  column="setting_friend" 	   jdbcType="CHAR"/>
		<result property="setBob" 		  column="setting_bob" 		   jdbcType="CHAR"/>
		<result property="SnsType" 		  column="sns_type" 		   jdbcType="CHAR"/>
	
	
	</resultMap>
	
	
	<select id="getUser"	parameterType="string"	resultMap="userSelectMap">
		SELECT
		user_id , name , email , password , role ,  phone ,  address ,  		
		FROM users 
		WHERE user_id = #{value}
	 </select>
	 

</mapper>